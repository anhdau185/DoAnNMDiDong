<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_sum_debt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_loan_amount"
            android:textColor="@color/colorPrimary"
            android:textSize="52sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỔNG TIỀN NỢ"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/add_loan_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/customized_button_2"
            android:drawableTop="@drawable/ic_action_add_dark"
            android:text="@string/add_new_loan"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/list_loan_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/customized_button_2"
            android:drawableTop="@drawable/ic_action_library_books_dark"
            android:text="@string/loan_list"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/incoming_payers_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/customized_button_2"
            android:drawableTop="@drawable/ic_action_checked_list_dark"
            android:text="@string/upcoming_payers"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:text="Trả nợ hôm nay"
        android:textSize="14sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>