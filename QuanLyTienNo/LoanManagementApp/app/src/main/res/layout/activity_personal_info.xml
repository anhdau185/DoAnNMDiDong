<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_PersonalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Chi tiết nợ"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:id="@+id/general_loan_info"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_below="@+id/toolbar_PersonalInfo"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/debtor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/debtor_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300,000"
                android:textColor="@color/colorPrimary"
                android:textSize="44sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_debtor_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/action_buttons"
        android:layout_below="@id/general_loan_info"
        android:divider="@color/lightGrey"
        android:dividerHeight="0px" />

    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/debtor_add_debt_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/customized_button"
            android:text="Thêm nợ"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/debtor_pay_debt_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/customized_button"
            android:text="Trừ nợ"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/contact_debtor_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/customized_button"
            android:text="Liên lạc"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</RelativeLayout>